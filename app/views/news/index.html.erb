<div class="row">
	<div class="span12">
		<div class="wrapper">
		 	<div class="timeline-wrap">
		 		<% @news.each do |news| %>
				<div class="timeline-event">
					<div class="timeline-title"><%= news.pubblicazione %></div>
					<div class="timeline-content">
						<h1><%= news.titolo %></h1>
						<p><%= news.corpo %></p>
						<p><%= link_to 'Show', news %>|
							<%= link_to 'Edit', edit_news_path(news) %>|
							<%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></p>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<%= link_to 'New News', new_news_path %>
